{
  "processing": {
    "output_language": "de",
    "podcast_voice": "thorsten",
    "batch_size": 5,
    "wait_between_batches_seconds": 10,
    "max_videos_per_run": 50
  },
  
  "filtering": {
    "min_duration_seconds": 300,
    "max_duration_seconds": 7200,
    "exclude_shorts": true,
    "exclude_livestreams": true
  },
  
  "summary": {
    "length_words": 300,
    "style": "professional",
    "include_timestamps": true,
    "language": "de"
  },
  
  "podcast": {
    "voice": "thorsten",
    "speed": 1.0,
    "format": "mp3"
  },
  
  "open_notebook": {
    "api_url": "http://open-notebook:5055",
    "auto_create_notebooks": true,
    "notebook_prefix": "YT: "
  },
  
  "services": {
    "whisper": {
      "url": "http://faster-whisper:8000",
      "model": "Systran/faster-distil-whisper-large-v3"
    },
    "libretranslate": {
      "url": "http://libretranslate:5000",
      "supported_languages": ["en", "de", "fr", "es", "it", "nl", "pl", "pt", "ru"]
    },
    "ollama": {
      "url": "http://ollama:11434",
      "model": "qwen2.5:7b-instruct-q4_K_M"
    },
    "openedai_speech": {
      "url": "http://openedai-speech:8000",
      "voice": "thorsten"
    }
  }
}
